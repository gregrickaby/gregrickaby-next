{
  "name": "nextjs-wordpress",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .next",
    "dev": "yarn clean && yarn lint && next dev",
    "develop": "yarn dev",
    "start": "next start",
    "lint": "./node_modules/.bin/eslint ./ --fix || true"
  },
  "dependencies": {
    "next": "9.3.5",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "date-fns": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^7.1.0",
    "imagemin-svgo": "^7.1.0",
    "install": "^0.13.0",
    "isomorphic-unfetch": "^3.0.0",
    "next-optimized-images": "^2.5.8",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react-icons": "^3.9.0",
    "responsive-loader": "^1.2.0",
    "sharp": "^0.25.2",
    "tailwindcss": "^1.2.0",
    "webp-loader": "^0.6.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "react-hooks",
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  }
}
